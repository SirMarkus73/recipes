---
import CategoryCard from "../components/CategoryCard.astro";
import Layout from "../layouts/Layout.astro";
interface AllMealsResponse {
  categories: Category[];
}

interface Category {
  idCategory: string;
  strCategory: string;
  strCategoryThumb: string;
  strCategoryDescription: string;
}

const API_URL = "https://www.themealdb.com/api/json/v1/1/categories.php";
const respone = await fetch(API_URL);

if (!respone.ok) {
  throw new Error(`Failed to fetch data from API: ${respone.status}`);
}

const results = (await respone.json()) as AllMealsResponse;
---

<Layout title="Categorys">
	<h1 class="text-4xl text-center py-4">Meals Category</h1>
  <main class="p-3 grid grid-cols-3 gap-5 place-items-center max-md:grid-cols-1 max-xl:grid-cols-2">
    {
      results.categories.map((category) => (
        <CategoryCard
          img={category.strCategoryThumb}
          id={category.idCategory}
          title={category.strCategory}
        ></CategoryCard>
      ))
    }
  </main>
</Layout>
